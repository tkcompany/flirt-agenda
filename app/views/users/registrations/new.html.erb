
      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="container">
          <div class="row">
            <div class="col-md-7">
                <h2 class="display-3">
                Tchatte avec de nouvelles personnes du monde entier.
                </h2>
                <p>
                Des millions de personnes de partout dans le monde s'amusent et se font de nouveaux amis tous les jours sur FlirtAgenda.
                </p>
				<p>
				
				</p>
			</div>
			<div class="col-md-5">
				<div class="card">
					<div class="card-body">
						<h3 class="card-title">Inscrivez-vous!</h3>
						
			<p class="card-text">

				<div class= "form-signin">


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        
          <div class="form-group">
         
          <%= f.text_field :login, autofocus: true, autocomplete: "login", placeholder: "Nom d'utilisateur", class: "form-control", required: true %>
        </div>

        

          <div class="form-group">
         
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "form-control", required: true %>
          </div>
        
          <div class="form-group">
            
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Mot de passe",  class: "form-control", required: true %>
          </div>
        
          <div class="form-group">
           
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmation du mot de passe", class: "form-control", required: true %>
          </div>

          <div class="form-group">
          En continuant votre inscription, vous acceptez  <%= link_to "les conditions d'utilisation et les règles de confidentialité", root_path %>
          </div>
        
          <div class="form-group">
            <%= f.submit "S'inscrire", class: "btn btn-lg btn-primary btn-block" %>
          </div>
        <% end %>
			</div>
			</p>
			</div>
			</div>

			</div>
          </div>
        </div>
      </div>

